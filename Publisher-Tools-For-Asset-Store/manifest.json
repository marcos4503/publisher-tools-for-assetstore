{
    "manifest_version": 2,
    "name": "Publisher Tools For Asset Store",
    "description": "Offers tools for Publishers of the Asset Store, such as notifications for Reviews (Updateds and News) and Sales.",
    "version": "1.0.2",
    "browser_action": {
        "default_icon": "img/icon19.png",
        "default_popup": "html/popup.html"
    },
    "icons": {
        "16": "img/icon16.png",
        "32": "img/icon32.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "permissions": [
        "notifications",
        "alarms",
        "*://*.assetstore.unity3d.com/*"
    ],
    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent": true
    }
}